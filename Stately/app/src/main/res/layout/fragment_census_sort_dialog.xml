<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/census_sort_category_radio_title"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themedColorHeaderText"
            android:text="@string/census_sort_category" />
        <RadioGroup
            android:id="@+id/census_sort_category_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@+id/census_sort_score">
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_score"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_world_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_world_rank"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_world_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_world_percent"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_region_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_region_rank"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_region_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_region_percent"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
        </RadioGroup>

        <TextView
            android:id="@+id/census_options_title"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="?attr/themedColorHeaderText"
            android:text="@string/census_sort_options" />
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/census_option_alphabetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:text="@string/census_sort_alphabetical"
            app:buttonTint="?attr/themedColorTab"/>

        <TextView
            android:id="@+id/census_sort_order_radio_title"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="?attr/themedColorHeaderText"
            android:text="@string/census_sort_order" />
        <RadioGroup
            android:id="@+id/census_sort_order_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@+id/census_sort_ascending">
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_ascending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_ascending"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
            <android.support.v7.widget.AppCompatRadioButton android:id="@+id/census_sort_descending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/census_sort_descending"
                android:textSize="15sp"
                app:buttonTint="?attr/themedColorTab"/>
        </RadioGroup>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>