<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/card_zombie_chart_title"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorHeaderText"
                android:text="@string/zombie_report_template" />
            <TextView
                android:id="@+id/card_zombie_chart_action"
                android:paddingTop="8dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                android:text="@string/zombie_noaction" />
            <TextView
                android:id="@+id/card_zombie_chart_null"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/zombie_chart_null"
                tools:visibility="visible"/>
            <com.github.mikephil.charting.charts.PieChart
                android:layout_marginTop="20dp"
                android:id="@+id/card_zombie_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
        <include layout="@layout/view_divider" />
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/card_zombie_chart_button_generic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/themedColorCard"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/card_zombie_chart_button_generic_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="-6dp"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_zombie_control"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_zombie_chart_button_generic_text"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/themedColorButton"
                    android:text="@string/zombie_control"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/card_zombie_chart_button_missile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/themedColorCard"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="-7dp"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_superweapon"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/themedColorButton"
                    android:text="@string/zombie_button_missile"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>