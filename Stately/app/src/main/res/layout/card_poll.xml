<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorHeaderText"
                android:text="@string/card_region_poll" />
            <TextView
                android:id="@+id/card_region_poll_question"
                android:paddingTop="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                tools:text="A tree falls in a forest and no one is around to hear it. Does a hipster have a vinyl recording of it?" />
            <TextView
                android:id="@+id/card_region_poll_author"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                tools:text="@string/poll_author" />
            <TextView
                android:id="@+id/card_region_poll_open"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                tools:text="@string/poll_open" />
            <TextView
                android:id="@+id/card_region_poll_close"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                tools:text="@string/poll_close" />
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/card_region_poll_content"
                android:paddingTop="8dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                tools:text="No, really, do they?" />
            <LinearLayout
                android:id="@+id/card_region_poll_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/region_poll_null_vote"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/votes_null"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/card_region_poll_chart"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="450dp" />
        </LinearLayout>

        <include layout="@layout/view_divider" />
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/card_region_poll_vote_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/themedColorCard"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="-9dp"
                android:padding="4dp"
                app:srcCompat="?attr/themedDrawableCheck"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_region_poll_vote_button_content"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/themedColorButton"
                    android:text="@string/poll_vote_button_submit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>