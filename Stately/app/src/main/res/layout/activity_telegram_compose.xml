<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telegram_compose_main"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/telegram_compose_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:contentPadding="16dp" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/telegram_compose_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:layout_alignLeft="@+id/telegram_compose_from"
                    android:layout_alignRight="@+id/telegram_compose_from"
                    android:textSize="15sp"
                    android:textColor="@color/colorSecondaryText"
                    android:text="@string/telegrams_to"/>
                <EditText
                    android:id="@+id/telegram_compose_recipients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/telegram_compose_to"
                    android:layout_alignTop="@+id/telegram_compose_to"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@android:color/transparent"
                    android:hint="@string/telegrams_to_hint"/>
                <TextView
                    android:id="@+id/telegram_compose_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:layout_below="@+id/telegram_compose_recipients"
                    android:textSize="15sp"
                    android:textColor="@color/colorSecondaryText"
                    android:text="@string/telegrams_from"/>
                <TextView
                    android:id="@+id/telegram_compose_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_toRightOf="@+id/telegram_compose_from"
                    android:layout_alignTop="@+id/telegram_compose_from"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryText"
                    tools:text="Greater Tern"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="#EEE"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:contentPadding="16dp">
            <EditText
                android:id="@+id/telegram_compose_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textSize="15sp"
                android:inputType="textMultiLine|textCapSentences"
                android:background="@android:color/transparent"
                android:hint="@string/telegrams_compose_hint"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>