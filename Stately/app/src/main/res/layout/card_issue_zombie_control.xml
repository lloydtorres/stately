<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/card_issue_zombie_control_background"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/card_issue_zombie_control_holder"
            android:layout_alignBottom="@+id/card_issue_zombie_control_holder" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77212121"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/card_issue_zombie_control_holder"
            android:layout_alignBottom="@+id/card_issue_zombie_control_holder" />

        <RelativeLayout
            android:id="@+id/card_issue_zombie_control_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="7"
                    android:text="@string/zombie_control" />
                <TextView
                    android:id="@+id/card_issue_zombie_control_survival_rate"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:shadowColor="@android:color/black"
                    android:shadowRadius="7"
                    android:text="@string/zombie_control_survival" />
            </LinearLayout>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_zombie_control"
                android:shadowColor="@android:color/black"
                android:shadowRadius="7"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>