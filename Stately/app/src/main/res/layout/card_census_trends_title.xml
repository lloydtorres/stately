<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardBackgroundColor="?attr/themedColorCard"
    card_view:contentPadding="16dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trends_title"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themedColorPrimaryText"
            tools:text="Industry: Timber Woodchipping" />
        <TextView
            android:id="@+id/trends_unit"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themedColorSecondaryText"
            tools:text="Tasmanian Pulp Environmental Export Index" />
    </LinearLayout>
</androidx.cardview.widget.CardView>