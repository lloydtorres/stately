<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/card_world_census_background"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/card_world_featured_census_holder"
            android:layout_alignBottom="@+id/card_world_featured_census_holder" />
        <LinearLayout
            android:id="@+id/card_world_featured_census_holder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowRadius="7"
                android:text="@string/world_census" />
            <TextView
                android:id="@+id/card_world_featured_census"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowRadius="7"
                tools:text="Industry: Timber Woodchipping" />
            <TextView
                android:id="@+id/card_world_featured_census_unit"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowRadius="7"
                tools:text="Tasmanian Pulp Environmental Export Index" />
            <TextView
                android:id="@+id/card_world_featured_census_score"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowRadius="7"
                android:text="@string/world_census_score" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>