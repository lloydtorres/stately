<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/region_factbook_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="?attr/themedColorCard"
    card_view:contentPadding="20dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_region_factbook_title"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themedColorHeaderText"
            android:text="@string/card_region_factbook_title" />
        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/region_factbook"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themedColorPrimaryText"
            tools:text="The Arbitration Committee, or Arbcom for short, is an international roundtable where member nations can discuss issues and settle disputes. The Arbcom headquarters is located in Saint GenÃ¨ve, Greater Tern." />
    </LinearLayout>
</android.support.v7.widget.CardView>