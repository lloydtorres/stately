<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/card_world_featured_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/card_world_featured_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:padding="20dp"
                android:layout_toLeftOf="@+id/card_world_featured_flag"
                android:layout_toStartOf="@+id/card_world_featured_flag">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/world_featured" />
                <TextView
                    android:id="@+id/card_world_featured_region_name"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    tools:text="Arbcom" />
                <TextView
                    android:id="@+id/card_world_featured_nation_count"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    tools:text="1,234 Nations" />
            </LinearLayout>
            <ImageView
                android:id="@+id/card_world_featured_flag"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/gray"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/card_world_featured_header" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                android:text="@string/card_region_wa_delegate" />
            <TextView
                android:id="@+id/card_world_featured_wa"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                tools:text="Greater Tern (1,234 votes)" />
            <TextView
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                android:text="@string/card_region_founder" />
            <TextView
                android:id="@+id/card_world_featured_founder"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                tools:text="Greater Tern (infinity days ago)" />
            <LinearLayout
                android:id="@+id/card_world_featured_factbook_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingTop="8dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/themedColorSecondaryText"
                    android:text="@string/card_region_factbook_title" />
                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/card_world_featured_factbook"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/themedColorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Region factbook goes here." />
            </LinearLayout>
            <TextView
                android:paddingTop="8dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                android:text="@string/card_region_tags_title" />
            <TextView
                android:id="@+id/card_world_featured_tags"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textColor="?attr/themedColorPrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Tag1, Tag2, Tag3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/view_divider" />
            <LinearLayout
                android:id="@+id/card_world_featured_region_button_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="-6dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_region_button"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/card_world_featured_region_button_name"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/themedColorButton"
                        android:text="@string/telegrams_region_explore"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:visibility="invisible"
                        android:textColor="?attr/themedColorButton"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-light" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>