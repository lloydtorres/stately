<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <RadioGroup
        android:id="@+id/vote_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/vote_radio_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wa_vote_dialog_for"
            android:textSize="15sp"/>
        <RadioButton android:id="@+id/vote_radio_against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/wa_vote_dialog_against"
            android:textSize="15sp"/>
        <RadioButton android:id="@+id/vote_radio_undecided"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/wa_vote_dialog_undecided"
            android:textSize="15sp"/>
    </RadioGroup>

</LinearLayout>