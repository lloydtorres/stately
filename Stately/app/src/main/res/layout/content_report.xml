<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="?attr/themedColorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/themedColorBackground">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardBackgroundColor="?attr/themedColorCard"
            card_view:contentPadding="16dp" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/report_target_holder"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_report_target"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:srcCompat="@drawable/ic_report_red"/>
                    <TextView
                        android:id="@+id/report_target"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorChart1"
                        android:layout_toRightOf="@id/icon_report_target"
                        android:layout_centerVertical="true"
                        android:text="@string/report_target" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_report_checklist"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_alert_moderator_grey"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/themedColorSecondaryText"
                        android:layout_toRightOf="@id/icon_report_checklist"
                        android:layout_centerVertical="true"
                        android:text="@string/report_checklist" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/report_category_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="?attr/themedColorCard"
            android:layout_marginBottom="12dp"
            card_view:contentPadding="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/themedColorHeaderText"
                    android:text="@string/report_want" />
                <RadioGroup
                    android:id="@+id/report_category"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:checkedButton="@+id/report_inappropriate">
                    <androidx.appcompat.widget.AppCompatRadioButton android:id="@+id/report_inappropriate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/report_inappropriate"
                        android:textSize="15sp"
                        app:buttonTint="?attr/themedColorTab"/>
                    <androidx.appcompat.widget.AppCompatRadioButton android:id="@+id/report_spam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/report_spam"
                        android:textSize="15sp"
                        app:buttonTint="?attr/themedColorTab"/>
                    <androidx.appcompat.widget.AppCompatRadioButton android:id="@+id/report_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/report_other"
                        android:textSize="15sp"
                        app:buttonTint="?attr/themedColorTab"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="?attr/themedColorCard"
            card_view:contentPadding="16dp">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/report_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textSize="15sp"
                android:inputType="textMultiLine|textCapSentences"
                android:background="@android:color/transparent"
                android:hint="@string/report_describe_hint"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>