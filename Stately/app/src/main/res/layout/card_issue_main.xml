<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="?attr/themedColorCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/card_issue_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_toLeftOf="@+id/card_issue_image"
            android:layout_toStartOf="@+id/card_issue_image">
            <TextView
                android:id="@+id/card_issue_main_title"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorPrimaryText"
                tools:text="Not A Drop To Drink" />
            <TextView
                android:id="@+id/card_issue_main_number"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/themedColorSecondaryText"
                tools:text="@string/issue_number" />
        </LinearLayout>
        <ImageView
            android:id="@+id/card_issue_image"
            android:layout_height="match_parent"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/card_issue_main_container"
            tools:visibility="visible"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>